<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/airbnb.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentals.styles.css" asp-append-version="true" />

</head>
<body>

    <a id="top"></a>

    <header class="p-3 mb-0 bg-dark">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    FRIBERG CAR <span class="text-primary">RENTALS</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cars" asp-action="Index">Alla bilar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="OmOss">Om oss</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Integritetspolicy</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        @await Component.InvokeAsync("UserMenu")
                    </div>
                </div>
            </nav>
        </div>
    </header>



    <main role="main" class="pb-3 d-flex flex-column min-vh-100">
            @RenderBody()
        </main>

    <footer class="bg-dark text-light py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap footer-content">
                <div class="text-start footer-left">
                    <p class="mb-0">© Friberg Car Rentals AB</p>
                </div>
                <div class="text-center footer-logo">
                    <img src="~/images/carrentals-logo-transparent.png" alt="Logo" height="120">
                </div>
                <div class="text-end footer-right">
                    <a class="mb-0 text-decoration-none text-light" href="#top">Tillbaka till toppen</a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/flatpickr/flatpickr.js"></script>
    <script src="~/lib/flatpickr/sv.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
