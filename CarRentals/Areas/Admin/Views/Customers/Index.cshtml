@model IEnumerable<CarRentals.Data.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">

    <p>
        <a asp-action="Create">Skapa ny kund</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.Id) </th>
                <th> @Html.DisplayNameFor(model => model.Name) </th>
                <th> @Html.DisplayNameFor(model => model.Email) </th>
                <th> @Html.DisplayNameFor(model => model.Password) </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                <td> @Html.DisplayFor(modelItem => item.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Email) </td>
                <td> @Html.DisplayFor(modelItem => item.Password) </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
