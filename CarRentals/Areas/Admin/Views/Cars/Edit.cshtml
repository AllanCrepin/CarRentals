@model CarRentals.Data.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerDay" class="control-label"></label>
                <input asp-for="PricePerDay" class="form-control" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="ImageUrls" class="control-label"></label>
                <input asp-for="ImageUrls" class="form-control" />
                <span asp-validation-for="ImageUrls" class="text-danger"></span>
            </div>
            -->




            <div class="form-group">
                <label asp-for="ImageUrls" class="control-label"></label>
                <div class="row g-3">
                    @for (int i = 0; i < 5; i++) // Change 5 to whatever max inputs you'd like
                    {
                        <div class="col-12">
                            <input asp-for="ImageUrls" name="ImageUrls[@i]" value="@(i < Model.ImageUrls.Count ? Model.ImageUrls[i] : string.Empty)" class="form-control" placeholder="Enter image URL (optional)" />
                        </div>
                    }
                </div>
                <small class="form-text text-muted">You can add up to 5 image URLs. Leave blank if unused.</small>
                <span asp-validation-for="ImageUrls" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
