@model CarRentals.Data.Models.Car
@using System.Globalization

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mx-auto mt-5">Ändra</h1>
<div class="container" style="">
    <div class="row justify-content-center align-items-center" style="height: 100%;">
        <div class="col-md-6">
            <h4>Bil</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PricePerDay" class="control-label"></label>
                    <input asp-for="PricePerDay" class="form-control" value="@Model.PricePerDay.ToString("0", CultureInfo.InvariantCulture)" />
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EnvironmentalRating" class="control-label"></label>
                    <input asp-for="EnvironmentalRating" class="form-control" />
                    <span asp-validation-for="EnvironmentalRating" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NumberSeats" class="control-label"></label>
                    <input asp-for="NumberSeats" class="form-control" />
                    <span asp-validation-for="NumberSeats" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrls" class="control-label"></label>
                    <div class="row g-3">
                        @for (int i = 0; i < 5; i++) // Change 5 to whatever max inputs you'd like
                        {
                            <div class="col-12">
                                <input asp-for="ImageUrls" name="ImageUrls[@i]" value="@(i < Model.ImageUrls.Count ? Model.ImageUrls[i] : string.Empty)" class="form-control" placeholder="Enter image URL (optional)" />
                            </div>
                        }
                    </div>
                    <small class="form-text text-muted">Du kan lägga till upp till 5 URLs. Oanvända fält ska lämnas tomma.</small>
                    <span asp-validation-for="ImageUrls" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsElectric" /> @Html.DisplayNameFor(model => model.IsElectric)
                    </label>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAutomatic" /> @Html.DisplayNameFor(model => model.IsAutomatic)
                    </label>
                </div>

                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Spara" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Tillbaka till listan</a>
            </div>
        </div>
    </div>

    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
