@model IEnumerable<CarRentals.Data.Models.Booking>

@{
    ViewData["Title"] = "My bookings";
}


<div class="container mt-5">
    <h1>Mina bokningar</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.Car.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Car.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCancelled)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Car.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Car.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCancelled)
                    </td>
                    <td>
                        @if (item.StartDate > DateTime.Now)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Avboka</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>