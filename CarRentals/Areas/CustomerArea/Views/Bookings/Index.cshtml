@model IEnumerable<CarRentals.Data.Models.Booking>

@{
    ViewData["Title"] = "Mina bokningar";
}


<div class="container mt-5">
    <h1>Mina bokningar</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Modell</th>
                    <th>År</th>
                    <th>Startdatum</th>
                    <th>Slutdatum</th>
                    <th>Kostnad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Car.Model)</td>
                        <td>@Html.DisplayFor(modelItem => item.Car.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalCost)</td>
                        <td>
                            @if (item.StartDate > DateTime.Now)
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Avboka</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>